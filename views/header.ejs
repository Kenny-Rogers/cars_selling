  <body class="">
    <div class="page">
      <div class="page-main">
        <div class="header py-4">
          <div class="container">
            <div class="d-flex">
              <a class="header-brand" href="/">
                <img src="/public/logo.png" class="header-brand-img" alt="logo">
              </a>
              <div class="d-flex order-lg-2 ml-auto">
              <% if (session.user_id) { %>
                 <div class="dropdown">
                  <a href="#" class="nav-link pr-0 leading-none" data-toggle="dropdown">
                    <span class="ml-2 d-none d-lg-block">
                      <span class="text-default"><i class="fe fe-user"></i>:- <%= session.full_name %></span>
                    </span>
                  </a>
                  <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                    <a class="dropdown-item" href="/signout">
                      <i class="dropdown-icon fe fe-log-out"></i> Logout
                    </a>
                  </div>
                </div> 
                <%  } if (!session.user_id) { %>
            <a href="/signin">
                    <span class="ml-2 d-none d-lg-block">
                        <span class="text-default">Login</span>
                    </span>
                </a>
                <a href="/signup">
                    <span class="ml-2 d-none d-lg-block">
                        <span class="text-default">Signup</span>
                    </span>
                </a>
                <% } %>
              </div>
              <a href="#" class="header-toggler d-lg-none ml-3 ml-lg-0" data-toggle="collapse" data-target="#headerMenuCollapse">
                <span class="header-toggler-icon"></span>
              </a>
            </div>
          </div>
        </div>
        <div class="header collapse d-lg-flex p-0" id="headerMenuCollapse">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-3 ml-auto">
                <form class="input-icon my-3 my-lg-0">
                  <input type="search" class="form-control header-search" placeholder="Search&hellip;" tabindex="1">
                  <div class="input-icon-addon">
                    <i class="fe fe-search"></i>
                  </div>
                </form>
              </div>
              <div class="col-lg order-lg-first">
                <ul class="nav nav-tabs border-0 flex-column flex-lg-row">
                    <li class="nav-item">
                        <a href="/" class="nav-link active"><i class="fe fe-home"></i> Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="javascript:void(0)" class="nav-link" data-toggle="dropdown"><i class="fe fe-alert-octagon"></i> Hot cars</a>
                        <div class="dropdown-menu dropdown-menu-arrow">
                            <a href="/hotcars" class="dropdown-item ">Hot Wheel Section</a>
                            <a href="/othercars" class="dropdown-item ">Other Cars</a>
                        </div>
                    </li>
                    <% if (session.user_type == 'seller') { %>
                    <li class="nav-item">
                        <a href="/sell" class="nav-link"><i class="fe fe-chevrons-left"></i> Sell Car</a>
                    </li>
                    <%  } if (session.user_type == 'buyer') { %>
                    <li class="nav-item">
                        <a href="/buy" class="nav-link"><i class="fe fe-chevrons-right"></i> Buy Car</a>
                    </li>
                    <% } %>
                    <li class="nav-item">
                        <a href="/about" class="nav-link"><i class="fe fe-file-text"></i> About us</a>
                    </li>
                </ul>
              </div>
            </div>
          </div>
        </div>